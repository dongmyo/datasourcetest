<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dongmyo.test.datasourcetest.mapper.MemberMapper">
    <select id="getMember" resultType="com.dongmyo.test.datasourcetest.model.Member">
        SELECT
          `organization_member_id`,
          `user_code`,
          `external_email_address`
        FROM `OrganizationMembers`
        WHERE `organization_member_id` = #{value}
    </select>

    <update id="updateMemberExternalAddress" parameterType="com.dongmyo.test.datasourcetest.model.Member">
        UPDATE `OrganizationMembers`
        SET
          `external_email_address` = #{externalEmailAddress}
        WHERE `organization_member_id` = #{organizationMemberId}
    </update>
</mapper>
